<div class="qaction-container" data-actorId="{{actorId}}">
    <div class="flexrow">
        <ul class="q-a-toggler-container flexrow">
            {{#if disadvantage}}
            <li id="q-a-disa" data-value="disadvantage" class="adv-mode q-a-toggler active">{{localize "DND5E.Disadvantage"}}</li>
            {{else}}
            <li id="q-a-disa" data-value="disadvantage" class="adv-mode q-a-toggler">{{localize "DND5E.Disadvantage"}}</li>
            {{/if}}
            {{#if normal}}
            <li id="q-a-norma" data-value="normal" class="adv-mode q-a-toggler active">{{localize "DND5E.Normal"}}</li>
            {{else}}
            <li id="q-a-norma" data-value="normal" class="adv-mode q-a-toggler">{{localize "DND5E.Normal"}}</li>
            {{/if}}
            {{#if advantage}}
            <li id="q-a-adva" data-value="advantage" class="adv-mode q-a-toggler active">{{localize "DND5E.Advantage"}}</li>
            {{else}}
            <li id="q-a-adva" data-value="advantage" class="adv-mode q-a-toggler">{{localize "DND5E.Advantage"}}</li>
            {{/if}}
        </ul>
        {{!-- <ul class="q-a-toggler-container flexrow">
            <li class="roll-mod q-a-toggler active" data-value="publicroll">Public</li>
            <li class="roll-mod q-a-toggler" data-value="gmroll">to GM</li>
            <li class="roll-mod q-a-toggler" data-value="blindroll">Blind</li>
            <li class="roll-mod q-a-toggler" data-value="selfroll">Self</li>
        </ul> --}}
    </div>

    <ol class="items-list inventory-list">
        <li class="items-header flexrow">
            <h3 class="item-name flexrow">{{ localize "DND5E.ItemTypeWeaponPl" }}</h3>
            <div class="item-details flexrow">{{ localize "DND5E.Damage" }} ({{ localize "DND5E.Type" }})</div>
        </li>
        <ol class="item-list">
            {{#each weapons as |weapon|}}
            <li class="item flexrow" data-itemid="{{weapon._id}}">
                <div class="item-name flexrow rollable quick-rollable" data-proficient="{{weapon.data.proficient}}">
                    <div class="item-image" style="background-image: url('{{weapon.img}}'); max-width:2em;"></div>
                    <h4>
                        {{weapon.name~}}
                    </h4>
                </div>
                <div class="item-details">{{ weapon.labels.damageTypes }}</div>
            </li>
            {{/each}}
        </ol>
    </ol>
    
    {{#each spellbook as |spellLevel|}}
    <ol class="items-list inventory-list">
        <li class="items-header flexrow">
            <h3 class="item-name flexrow">{{ spellLevel.label }}</h3>
            <div class="item-details flexrow">{{ localize "DND5E.Damage" }} ({{ localize "DND5E.Type" }})</div>
        </li>
        <ol class="item-list">
            {{#each spellLevel.spells as |spell|}}
                <li class="item flexrow" data-itemid="{{spell._id}}">
                <div class="item-name flexrow rollable quick-rollable" data-proficient="{{spell.data.proficient}}">
                    <div class="item-image" style="background-image: url('{{spell.img}}'); max-width:2em;"></div>
                    <h4>
                        {{spell.name~}}
                    </h4>
                </div>
                <div class="item-details">{{ spell.labels.damageTypes }}</div>
            </li>
            {{/each}}
        </ol>
    </ol>
    {{/each}}
</div>